<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ollama API URL Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本机地址"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/editOllamaAPIURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_ollama_api_url"
            android:inputType="text|textUri"
            android:minHeight="48dp"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:textColor="@android:color/black" />

        <!-- Spinner for Selecting Model -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模型选择"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerModels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <!-- System Prompt Setting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI名称"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/editSystemPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_system_prompt"
            android:minHeight="48dp"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:textColor="@android:color/black" />

        <!-- Username Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_username"
            android:minHeight="48dp"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:textColor="@android:color/black" />

        <!-- Profile Picture Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的头像"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp">

            <!-- ImageView to display selected image -->
            <ImageView
                android:id="@+id/imageViewProfilePicture"
                android:layout_width="151dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/pic"
                android:background="@android:color/white"
                android:padding="4dp" />

            <!-- Button to trigger file selection -->
            <Button
                android:id="@+id/buttonSelectPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="选择头像"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="保存"
                android:backgroundTint="@color/design_default_color_primary"
                android:textColor="@android:color/white"
                android:minWidth="120dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/buttonReturn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="返回"
                android:backgroundTint="@color/design_default_color_primary"
                android:textColor="@android:color/white"
                android:minWidth="120dp"
                android:minHeight="48dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
